<% include ../partials/header %>



        <div class="col-lg-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Profile</h4>
                </div>
                <div class="content">
                    <form action="/users/me/?_method=PUT" method="POST">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Work Experience</label>
                                    <textarea rows="5" class="form-control border-input" name="user[work]" placeholder="Write about your work experience" value="<%= user.work %>"><%= user.work %></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Education</label>
                                    <textarea rows="5" class="form-control border-input" name="user[education]" placeholder="Write about your education" value="<%= user.education %>"><%= user.education %></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Skills</label>
                                    <textarea rows="5" class="form-control border-input" name="skills" placeholder="Write about your skills" value="<%= user.skills %>"><%= user.skills %></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Job</label>
                                    <textarea rows="5" class="form-control border-input" name="user[job]" placeholder="Current Job" value="<%= user.job %>"><%= user.job %></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Employer</label>
                                    <textarea rows="5" class="form-control border-input" name="user[company]" placeholder="Company" value="<%= user.company %>"><%= user.company %></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-fill btn-wd">Update Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        
        
        
<% include ../partials/footer %>
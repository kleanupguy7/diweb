<% include ../partials/header %>




<div class="container">
    
    <div class="messaging">
        
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="inbox_chat">
                   <% if(currentUser.discussions.length <= 0){ %>
                        <h3>No conversations started :(</h3>
                   <% }else{ %>
                        <div class="chat_people">
                            <% currentUser.openchats.forEach(function(chatee){ %>
                                <% if (!(chatee.userAvatar)){ %>
                                    <div class="pull-left image post-heading">
                                        <img src="/uploads/2018-09-16T13:22:41.307ZuserAvatar" class="img-circle avatar">
                                    </div>
                                <% } else { %>
                                    <div class="pull-left image post-heading">
                                        <img src="/uploads/<%= chatee.userAvatar %>" class="img-circle avatar">
                                    </div>
                                <% } %>
                                   <a class="nav-link" href="/users/discussions/<%=chatee._id%>/chat"><h4><%= chatee.firstname %></h4></a>
                                <hr>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
       
    
    
            <div class="mesgs">
                <div class="msg_history">
                    <% allMessages.forEach(function(message){ %>
                        <% if(message.author.id.equals(currentUser.id)) { %>
                            <div class="outgoing_msg">
                                <div class="sent_msg">
                                    <p><%=message.text%></p>
                                    <span class="username">Sent By <%=message.author.username%></span>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="incoming_msg">
                                <div class="received_msg">
                                    <div class="received_withd_msg">
                                        <p><%=message.text%></p>
                                        <span class="username">Sent By <%=message.author.username%></span>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                    
                    
              <div class="type_msg">
                <div class="input_msg_write">
                    <form action="/users/discussions/<%=friend.id%>" method="POST">
                            <input class="write_msg" type="text" name="reply[text]" placeholder="Type your message here">
                            <button class="btn btn-md btn-primary msg_send_btn"><i class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
                </div>
            </div>
        
        
        </div>
    </div>
            


</div>
       

<% include ../partials/footer %>
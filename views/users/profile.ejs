<% include ../partials/header %>
  
    <div class="content">
        <div class="col-md-4">
            <div class="card card-user">
                <div class="thumbnail">
                    <% if(user.userAvatar) {%>
                        <img src="/uploads/<%= user.userAvatar %>" class="image-responsive">
                    <% } else { %>
                        <img src="/uploads/2018-09-16T13:22:41.307ZuserAvatar" class="image-responsive">
                    <% } %>
                </div>
              <div class="caption-full text-center">
                    <p class="display-4"><strong><%= user.firstname %> <%= user.lastname %></strong></p>
              </div>
            </div>
            
            <% if(!user._id.equals(currentUser._id) && !(currentUser.isAdmin)) { %>
                <div class="card">
                    <div class="card-body text-center">
                        <h4>Press the button to send a message to this user</h4>
                        <div class="row">
                            <div class="update ml-auto mr-auto">
                                <% if((currentUser.discussions.indexOf(user._id)) >= 0 ) {%>
                                    <form action ="/users/discussions/<%= user._id%>/oldmessage" method="POST">
                                        <div class="form-group">
                                            <button class="btn btn-lg btn-primary btn-block">Open Discussions</button>
                                        </div>
                                    </form>
                                <% } else { %>
                                    <form action ="/users/discussions/<%= user._id%>/message" method="POST">
                                        <div class="form-group">
                                            <button class="btn btn-lg btn-primary btn-block">Open Discussions</button>
                                        </div>
                                    </form>
                                <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
            
            <% } %>
        </div>
          
          
          <div class="col-md-8">
            <div class="card card-user">
              <div class="card-body">
                  <div class="row">
                    <div class="col-md-6 pr-1">
                      <div class="form-group">
                        <label>First Name</label>
                        <h5 class="form-control"><%= user.firstname %></h5>
                      </div>
                    </div>
                    <div class="col-md-6 pl-1">
                      <div class="form-group">
                        <label>Last Name</label>
                        <h5 class="form-control"><%= user.lastname %></h5>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>Phone Number</label>
                        <h5 class="form-control"><%= user.tel %></h5>
                      </div>
                    </div>
                    <div class="col-md-4 px-1">
                      <div class="form-group">
                        <label>Job</label>
                        <h5 class="form-control"><%= user.job %></h5>
                      </div>
                    </div>
                    <div class="col-md-4 pl-1">
                      <div class="form-group">
                        <label>Company</label>
                        <h5 class="form-control"><%= user.company %></h5>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Work Experience</label>
                        <h5 class="form-control"><%= user.work %></h5>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Education</label>
                        <h5 class="form-control"><%= user.education %></h5>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Skills</label>
                        <h5 class="form-control"><%= user.skills %></h5>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
        </div>
        <% if (user._id.equals(currentUser._id)){ %>
            <form action ="/users/editvisibility" method="GET">
                  <button class="btn btn-lg btn-primary btn-block">Edit Personal Information visibility</button>
            </form>
        <% } %>
    </div>




<% include ../partials/footer %>